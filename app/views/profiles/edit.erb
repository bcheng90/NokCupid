<div class="row">
<section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Edit Profile Information</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                     <form action="/users/<%= @profile.id %>/profile" method="post">
                      <input type='hidden' name='_method' value='put' />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="integer" class="form-control" name="age" value="<%= @profile.age %>" />
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="location" value="<%= @profile.location %>" />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                      <input class="form-control" type='text' name="about_me" value="<%= @profile.about_me %>" />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                              <div class="col-md-6">
                                <div class="form-group">
                                      <input class="form-control" type='text' name="quirk" value="<%= @profile.quirk %>"/>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>

                             <div class="col-md-6">
                                <div class="form-group">
                                      <input class="form-control" type='text' name="tagline" value="<%= @profile.tagline %>" />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Save</button>
                            </div>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </section>
</div>

