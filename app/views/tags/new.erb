<div class="row">
<section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Add A Preference</h2>
                    <p class="section-subheading text-muted">Let The Rage Flow Right Through Your Fingers</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                     <form action="/users/<%=profile_id%>/tags" method='post'>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="name" placeholder="Tag Name" id="name" >
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                  <h3>Dislike
                                    <input id="preference" type="radio" class="form-control" name="status" value=false ></h3>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                   <h3>Like
                                    <input id="preference" type="radio" class="form-control" name="status" value=true ></h3>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>


                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Add Tag</button><br>
                                <button id="done-with-hate" class="btn center"><h5><a href="/users/<%=profile_id%>">Done letting the hate flow through you?</a></h5></button>
                            </div>

                        </div>

                    </form>


                </div>
            </div>
        </div>
    </section>
</div>

